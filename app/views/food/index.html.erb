<h1>Food Options</h1>
<%= link_to 'New', '/foods/new', class: 'btn btn-primary' %>

<% @foods.each do |food| %>
<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object product-thumb" src="<%= food.picture_url %>" alt="...">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to food.name, "/foods/#{food.id}" %></h4>
    <%= food.description %>
    <%= link_to 'Edit', "/foods/#{food.id}/edit", class: 'btn btn-default' %>
  </div>
</div>
<% end %>